<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.washington.chau93.hvz_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".models.FirebaseAuthCheck">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/LoginLabel"></activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/RegisterLabel" />
        <activity android:name=".activities.MenuActivity" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.RulesActivity" />
        <activity android:name=".activities.CreateGameActivity"></activity>
    </application>

</manifest>
